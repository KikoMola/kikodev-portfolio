---
interface Props {
  avatarUrl: string;
  login: string;
}

const { avatarUrl, login } = Astro.props;
---

<aside
  class="w-full md:w-[20%] h-screen bg-gray-100 dark:bg-gray-800 flex items-center justify-center relative"
>
  <!-- Dark mode toggle button -->
  <button
    onclick="window.toggleTheme()"
    class="absolute top-4 right-4 p-2 rounded-lg bg-white dark:bg-gray-700 shadow-md hover:shadow-lg transition-shadow"
    aria-label="Toggle dark mode"
  >
    <svg class="w-6 h-6 text-gray-800 dark:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path class="dark:hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
      <path class="hidden dark:block" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
    </svg>
  </button>

  <div class="text-center">
    <img
      src={avatarUrl}
      alt={`@${login}`}
      class="w-48 h-48 rounded-full mx-auto mb-6"
    />
    <span class="text-2xl font-bold text-gray-700 dark:text-white block mb-6 glitch"
      >@{login}</span
    >

    <div class="flex flex-col gap-3">
      <a
        href="https://github.com/KikoMola"
        class="inline-flex items-center justify-center px-4 py-2 border-[1px]
        rounded-[10px] border-b-[4px] border-black dark:border-white bg-white dark:bg-gray-700 hover:bg-[#191A23] hover:text-white dark:text-white transition-colors"
      >
        <svg
          class="w-6 h-6 mr-2"
          fill="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            fill-rule="evenodd"
            d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
            clip-rule="evenodd"></path>
        </svg>
        GitHub Profile
      </a>

      <a
        href="https://www.linkedin.com/in/kikoguirado/"
        class="inline-flex items-center justify-center px-4 py-2 border-[1px]
        rounded-[10px] border-b-[4px] border-black dark:border-white bg-[#B9FF66] dark:bg-[#B9FF66] hover:bg-[#191A23] hover:text-white dark:hover:bg-[#191A23] transition-colors"
      >
        <svg
          class="w-6 h-6 mr-2"
          fill="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
          ></path>
        </svg>
        LinkedIn Profile
      </a>
    </div>
  </div>
</aside>
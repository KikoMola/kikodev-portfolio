---
import { getGithubUser } from '../services/github.js';
import type { GitHubUser } from '../services/github.js';

const username = import.meta.env.PUBLIC_GITHUB_USERNAME;
const githubUser = await getGithubUser(username) as GitHubUser;
---

<aside class="w-full md:w-[30%] h-screen bg-gray-100 flex items-center justify-center">
    <div class="text-center">
        <img 
            src={githubUser.avatar_url} 
            alt={`@${githubUser.login}`}
            class="w-48 h-48 rounded-full mx-auto mb-6"
        />
        <p class="text-2xl font-bold text-gray-700">@{githubUser.login}</p>
    </div>
</aside> 